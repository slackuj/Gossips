<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/text10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="@string/text10"
        android:textStyle="bold"
        android:textSize="22sp"
        />


    <TextView
        android:id="@+id/text11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text10"
        android:layout_marginVertical="4dp"
        android:text="@string/text11"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text11"
        android:layout_marginHorizontal="4dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/text12"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text12"
        android:layout_marginVertical="4dp"
        android:text="@string/text13"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text13"
        android:layout_marginVertical="4dp"
        android:text="@string/next_button"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/find_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_below="@+id/btn3"
        android:text="@string/alternate_signup_method"
        android:textColor="@color/app_color"
        android:backgroundTint="@color/transparent"
        app:strokeColor="@color/app_color"
        app:strokeWidth="2dp"
        />

    <TextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/have_account"
        android:textColor="@color/app_color"
        android:textStyle="bold"
        />

</RelativeLayout>