<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/text19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="@string/text19"
        android:textStyle="bold"
        android:textSize="22sp"
        />


    <TextView
        android:id="@+id/text20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text19"
        android:layout_marginVertical="4dp"
        android:text="@string/text20"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text20"
        android:layout_marginVertical="4dp"
        android:text="@string/agree_button"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/not_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_below="@+id/btn4"
        android:text="@string/not_now"
        android:textColor="@color/app_color"
        android:backgroundTint="@color/transparent"
        app:strokeColor="@color/app_color"
        app:strokeWidth="2dp"
        />

    <TextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/have_account"
        android:textColor="@color/app_color"
        android:textStyle="bold"
        />

</RelativeLayout>